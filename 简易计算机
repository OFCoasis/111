简易计算机
#include<stdio.h>
int main()
{
    char  str1[100];
    gets(str1);
    int a, b,sum;
    a = str1[0] - '0';
    b = str1[2] - '0';
    sum = a + b;
    printf("%d\n",sum);
    return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
    char  str[100];
    gets(str);
    int a, b, sum;
    sum = str[0] - '0';
    for (int i = 1; i < strlen(str); i++)
        if (str[i] == '+')
        {
            a = str[i + 1] - '0';
            sum += a;
        }
        else if (str[i] == '-')
        {
            b = str[i + 1] - '0';
            sum -= b;
        }
    printf("=%d\n", sum);
    return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
    char  str[100];
    gets(str);
    int a, b, sum;
    sum = str[0] - '0';
    for (int i = 1; i < strlen(str); i++)
        if (str[i] == '*')
        {
            a = str[i + 1] - '0';
            sum *= a;
        }
        else if (str[i] == '/')
        {
            b = str[i + 1] - '0';
            sum /= b;
        }
    printf("=%d\n", sum);
    return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
    char  str[100] = {0};
    printf("请输入你要计算的数：\n");
    gets(str);
    int i, a, b, sum;
    unsigned int zfs;
    zfs = strlen(str);  
    for (int i = 1; i < zfs; i++)
    {
        if (str[i] == '*')
        {
            str[i + 1] = (str[i - 1] - '0') * (str[i + 1] - '0')+'0';          
            str[i - 1] = '1';
            
        }
        else if (str[i] == '/')
        {
          h7tgb        }        
    }  

    for (int i = 1; i < zfs; i++)
    {
        if (str[i] == '*')
        {
            str[i + 1] = (str[i - 1] - '0') * (str[i + 1] - '0') + '0';
            str[i] = '+';
            str[i - 1] = '0';
        }
    }
    sum = str[0] - '0';
    for (int i = 1; i < zfs; i++)
    {
      for (int i = 1; i < zfs; i++)
        {
            a = str[i + 1] - '0';
            sum += a;
        }
        else if (str[i] == '-')
        {
            b = str[i + 1] - '0';
            sum -= b;
        }
    }    
    printf("最终结果=%d\n", sum);
    return 0;
}
